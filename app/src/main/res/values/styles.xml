<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_xxlarge</item>
        <item name="android:textColor">@color/layout_title</item>
        <item name="titleTextColor">@color/layout_title</item>
    </style>

    <style name="smallFont" parent="AppTheme">
        <item name="android:padding">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/layout_item_desc</item>
    </style>

    <style name="regularFont" parent="AppTheme">
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/bg_lock</item>
    </style>


</resources>
